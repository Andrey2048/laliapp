<resources >

    <style name="Widget.MaterialComponents.Button.TextButton.My" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">@dimen/button_size</item>
        <item name="android:minHeight">@dimen/button_size</item>
        <item name="android:paddingStart">@dimen/common_spacing</item>
        <item name="android:paddingEnd">@dimen/common_spacing</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="Widget.AppTheme.LikeCheckBox" parent="Widget.MaterialComponents.Button.TextButton.My">
        <item name="icon">@drawable/selector_like</item>
        <item name="android:text">@string/like</item>
    </style>


    <style name="Widget.AppTheme.MentionCheckBox" parent="Widget.MaterialComponents.Button.TextButton.My">
        <item name="icon">@drawable/selector_mention</item>
        <item name="android:text">@string/mention</item>
    </style>

    <style name="Widget.AppTheme.ShareCheckBox" parent="Widget.MaterialComponents.Button.TextButton.My">
        <item name="icon">@drawable/ic_baseline_share_24</item>
    </style>


    <style name="Widget.AppTheme.ParticipateCheckBox" parent="Widget.MaterialComponents.Button.TextButton.My">
        <item name="icon">@drawable/selector_participation</item>
        <item name="android:text">@string/participate</item>
    </style>

    <style name="Widget.AppTheme.SpeakersCheckBox" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_baseline_record_voice_over_24</item>
        <item name="android:text">@string/speakers</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="iconTint">?attr/colorOnSurface</item>
    </style>


    <style name="Widget.App.MenuCheckBox" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="icon">@drawable/ic_baseline_more_vert_24</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:minWidth">@dimen/button_size_l</item>
        <item name="android:minHeight">@dimen/button_size_l</item>
    </style>

