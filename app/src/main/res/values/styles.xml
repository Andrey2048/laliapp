    <style name="Widget.App.Location" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ic_baseline_location_on_24</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
